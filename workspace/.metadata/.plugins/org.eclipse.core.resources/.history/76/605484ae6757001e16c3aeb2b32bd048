$(function(){
	$('#writeBtn').click(function(){
		if($('#name').val()==''){
			$('#nameDiv').text('이름 입력');
			$('#name').focus();
		}
	
	$('#writeBtn').click(function(){
		if($('#id').val()==''){
			$('#idDiv').text('아이디 입력');
			$('#id').focus();
		}
	
	$('#writeBtn').click(function(){
		if($('#pwd').val()==''){
			$('#pwdDiv').text('비밀번호 입력');
			$('#pwd').focus();
		}
	});
});